snippet fontmixin "updated font mixin"
//font - size, line-height, weight
@mixin font(\$size: 16, \$line: 18, \$weight: normal) {
  font-size: unquote(\$size + 'px');
  line-height: unquote(\$line + 'px');
  font-weight: (\$weight);
}
endsnippet

snippet collection "collection scss"
.collection--list {
  margin: 0;
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  li {}
  a {}

  .collection-item__content {}

  .collection-item-label {}
  .collection-item-description {}
  .collection-item-image {}

  // FDP-10889 override
  .collection-item-image.image {
    max-width: 100% !important;
  }
}
endsnippet

snippet placeholder "placeholder styles"
::-webkit-input-placeholder {
  color: $1;
}

::-moz-placeholder {
  color: $1;
}

:-ms-input-placeholder {
  color: $1;
}

:-moz-placeholder {
  color: $1;
}
endsnippet


