snippet tktype "type"
@include tk-type(
  $family: '${1:zillaslab}',
  $type: '${2:body}',
  $font-size: ${3:$baseFontSize},
  $line-height: '${4:1.5em}',
  $bold:${5:null},
  $italic:${6:null},
  $letter-spacing:${7:null},
  $font-weight:${8:null}
);
endsnippet

snippet tkheading "heading"
@include tk-heading(
